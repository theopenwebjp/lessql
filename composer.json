{
  "name": "theopenweb/lessql",
  "version": "2.0.0",
  "description": "LessQL: A lightweight and performant PHP ORM alternative",
  "keywords": [
    "orm",
    "notorm",
    "sql",
    "pdo",
    "database"
  ],
  "license": "MIT",
  "homepage": "https://github.com/theopenwebjp/lessql",
  "authors": [
    {
      "name": "The Open Web JP",
      "homepage": "https://theopenweb.jp"
    },
    {
      "name": "Morris Brodersen",
      "homepage": "https://morrisbrodersen.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "LessQL\\": "src/LessQL"
    }
  },
  "require": {
    "php": ">=8.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit --bootstrap=tests/sqlite.php --coverage-html=coverage tests",
    "format": "vendor/bin/php-cs-fixer fix .",
    "lint": "vendor/bin/phpstan analyse -c phpstan.neon"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "friendsofphp/php-cs-fixer": "^3.59",
    "phpstan/phpstan": "^1.11"
  }
}
